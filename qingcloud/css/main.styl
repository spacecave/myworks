@font-face  
  font-family: Roboto100
  src: url(font/Roboto_100.ttf)

@font-face
  font-family: Roboto700
  src: url(font/Roboto_700.ttf)

@font-face
  font-family: Roboto_r
  src: url(font/Robotoregular.ttf)

font-all = "Pingfang SC, sans-serif"  

font-roboto-thin = "Roboto100" + font-all

*
  margin: 0
  padding: 0;
  color: #fff
  border: 0
  font-family: Roboto_r, Pingfang SC, sans-serif
  font-size: 16px
  font-weight: normal

body
  display: block
  a
    text-decoration: none
    cursor: pointer
  .wrap
    
    .leader
      width: 1160px;
      height: 914px;
      margin: 0 auto;
      z-index: 99;
      background: rgba(255, 255, 255, 0);
      .leader-top
        height: 100%;
      .logo-area
        width: 352px;
        height: 100px;
        line-height: 100px;
        float: left;
        display:flex;
        align-items:center;
        justify-content: flex-start;
        .logo-img
          width: 168px;
          height: 36px;
          background: url(img/qingcloudlogo.svg) no-repeat;
      .nav-bar
        height: 100px;
        float: left;
        display: flex;
        list-style-type: none;
        .nav-items
          display: block;
          position: relative;
          height: 100px;
          line-height: 100px;
          font-size: 16px;
          margin-left: 24px;
          cursor: pointer;
          .items
            display: none;
            position: absolute;
            left: 10px;
            top: 98px;
            background: #57b382;
            padding: 0;
            margin: 0;
            width: 150px;
            z-index: 101;
            list-style-type: none;
            li 
              margin: 0;
              pading: 0;
              &:hover
                background: #4ba575;
    .diagonal
      width: 100%
      height: 914px
      position: absolute;
      left: 0px;
      top: 0px;
      z-index: -1;
      background: url(img/line.png) repeat center;
      
    .diagonal-1
      z-index: -2;
      background-image: radial-gradient(ellipse farthest-corner at 2400px 100px, #14102F 20%, #000000 100%);
      

